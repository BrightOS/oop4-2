<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimaryDark"
    android:paddingHorizontal="5dp">

    <TextView
        android:id="@+id/a_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="A"
        android:textAlignment="center"
        android:textColor="?colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/a_edit_text"
        app:layout_constraintEnd_toStartOf="@id/b_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/a_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:hint="A value"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="?colorAccent"
        app:layout_constraintBottom_toTopOf="@id/a_number_picker"
        app:layout_constraintEnd_toEndOf="@id/a_label"
        app:layout_constraintStart_toStartOf="@id/a_label"
        app:layout_constraintTop_toBottomOf="@id/a_label" />

    <NumberPicker
        android:id="@+id/a_number_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/a_slider"
        app:layout_constraintEnd_toEndOf="@id/a_label"
        app:layout_constraintStart_toStartOf="@id/a_label"
        app:layout_constraintTop_toBottomOf="@id/a_edit_text" />

    <com.google.android.material.slider.Slider
        android:id="@+id/a_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:labelStyle="@style/MyTooltip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/a_label"
        app:layout_constraintStart_toStartOf="@id/a_label"
        app:layout_constraintTop_toBottomOf="@id/a_number_picker"
        app:thumbColor="?colorAccent"
        app:tickColor="?colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_extrabold"
        android:text="&lt;="
        android:textAlignment="center"
        android:textColor="?colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/a_label"
        app:layout_constraintEnd_toStartOf="@id/b_label"
        app:layout_constraintStart_toEndOf="@id/a_label"
        app:layout_constraintTop_toTopOf="@id/a_label" />

    <TextView
        android:id="@+id/b_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="B"
        android:textAlignment="center"
        android:textColor="?colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/b_edit_text"
        app:layout_constraintEnd_toStartOf="@id/c_label"
        app:layout_constraintStart_toEndOf="@id/a_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/b_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:hint="B value"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="?colorAccent"
        app:layout_constraintBottom_toTopOf="@id/b_number_picker"
        app:layout_constraintEnd_toEndOf="@id/b_label"
        app:layout_constraintStart_toStartOf="@id/b_label"
        app:layout_constraintTop_toBottomOf="@id/b_label" />

    <NumberPicker
        android:id="@+id/b_number_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/b_slider"
        app:layout_constraintEnd_toEndOf="@id/b_label"
        app:layout_constraintStart_toStartOf="@id/b_label"
        app:layout_constraintTop_toBottomOf="@id/b_edit_text" />

    <com.google.android.material.slider.Slider
        android:id="@+id/b_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:labelStyle="@style/MyTooltip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/b_label"
        app:layout_constraintStart_toStartOf="@id/b_label"
        app:layout_constraintTop_toBottomOf="@id/b_number_picker"
        app:thumbColor="?colorAccent"
        app:tickColor="?colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_extrabold"
        android:text="&lt;="
        android:textAlignment="center"
        android:textColor="?colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/a_label"
        app:layout_constraintEnd_toStartOf="@id/c_label"
        app:layout_constraintStart_toEndOf="@id/b_label"
        app:layout_constraintTop_toTopOf="@id/a_label" />

    <TextView
        android:id="@+id/c_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="C"
        android:textAlignment="center"
        android:textColor="?colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/c_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/b_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/c_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:hint="C value"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="?colorAccent"
        app:layout_constraintBottom_toTopOf="@id/c_number_picker"
        app:layout_constraintEnd_toEndOf="@id/c_label"
        app:layout_constraintStart_toStartOf="@id/c_label"
        app:layout_constraintTop_toBottomOf="@id/c_label" />

    <NumberPicker
        android:id="@+id/c_number_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/c_slider"
        app:layout_constraintEnd_toEndOf="@id/c_label"
        app:layout_constraintStart_toStartOf="@id/c_label"
        app:layout_constraintTop_toBottomOf="@id/c_edit_text" />

    <com.google.android.material.slider.Slider
        android:id="@+id/c_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:labelStyle="@style/MyTooltip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/c_label"
        app:layout_constraintStart_toStartOf="@id/c_label"
        app:layout_constraintTop_toBottomOf="@id/c_number_picker"
        app:thumbColor="?colorAccent"
        app:tickColor="?colorAccent" />

</androidx.constraintlayout.widget.ConstraintLayout>